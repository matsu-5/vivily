<div class="top_image">
  <section class="container clearfix">
	<div class="row">
		<div class="col-md-8 col-md-offset-2 new-container">
			<h1 class="new-music text-center">New Music</h1>
			  <hr>
			    <div class="col-md-9 col-md-offset-2">
			      <div class="row">
				    <%= form_for @music,:url => {:action => :create} do |f|%>
					  <b>Music Name </b><br>
					      <%= f.text_field :name, class:"form-control", placeholder: "music title" %>
					  <b>画像</b>
						  <%= f.attachment_field :image %>
					  <b>音楽</b>
						  <%= f.file_field :listening %>
					  <b>歌詞</b>
                        <%= f.text_area :comment, 'data-provider': :summernote, src: "./js/summernote/lang/summernote-ja-JP.js" %>
                      <div class="new-actions">
					    <%= f.submit "save", class:"btn btn-block btn-dark" %>
					  </div>
				    <% end %>
				      <div class="col-md-9 col-md-offset-5">
                         <div class ="back">
                           <%= link_to 'Back', admin_homes_music_path, class: "btn-default" %>
                         </div>
                     </div>
			      </div>
			    </div>
		</div>
	</div>
   </section>
</div>