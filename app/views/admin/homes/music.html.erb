<div class="top_image">
  <div class="content">

<%= link_to 'New Discography', new_admin_disc_path,class: "btn btn-lg, btn-primary new-button" %>
<% @categories.each do |category| %>
	<%= link_to "/admin/category/#{category.id}" do %>
				 			<h3 style="color: black; font-size: 15px; "><%= category.name %>(<%= category.discs.count %>)</h3>
				 		 <% end %>
				 		 <% end %>
    <div class="container">
	  <div class="row">
		<div class="col-md-9 col-md-offset-0">
	       <h2 class="new-discs">discography</h2>
		   <% @disc.each do |disc| %>
		     <image class="example_image">
		  	     <%= link_to admin_disc_path(disc) do %>
			     <%= attachment_image_tag disc, :image, size: "200x200" %>
			     <% end %>
		     </image>
		   <% end %>
	    </div>
	</div>
  </div>

<%= link_to 'New music', new_admin_music_path,class: "btn btn-lg, btn-primary new-button" %>

  <div class="container">
  	<div class="row">
  	  <div class="col-md-9 col-md-offset-0">
		<h2 class="new-musics">music</h2>
		  <% @music.each do |music| %>
			  <image class="example_image">
			    <%= link_to admin_music_path(music) do %>
			    <%= attachment_image_tag music, :image, size: "200x200" %>
		        <% end %>
		      </image>
		   <% end %>
      </div>
    </div>
</div>

<div class="index_content">
  <a class="js-modal-open btn btn-dark" href="">New post</a>
  <h2 class="index_content_text">Posts</h2>
</div>
  <div class="modal js-modal">
    <div class="modal__bg js-modal-close"></div>
      <div class="modal__content">
        <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">New post</h5>
        <a class="js-modal-close btn btn-dark" href="">Ã—</a>
      </div>
        <%= form_for @category,url:admin_categories_path, method: :post,remote: true do |f| %>
          <%= f.label :name %><br>
          <%= f.text_field :name, class:"form-control", placeholder: "name" %><br>
          <%= f.submit "create", class:"btn btn-dark" %>
        <% end %>
    </div>
</div>

<% @categories.each do |category| %>
<%= category.name%>
<%= link_to "Destroy", admin_category_path(category),class:"btn-sm btn-danger", method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>
</div>
</div>



