
<%= link_to 'New News', new_admin_information_path, class: "btn-circle-border-double" %>

  <div class="top_image">
    <div class="content">
     <div class="container">
        <div class="row">
          <div class="col-md-9 col-md-offset-2">
          <h1 class="new-information">information</h1>
            <% @information.each do |information| %>
              <div class="example">
                <button type="button" class="btn btn-light">
                  <%= link_to admin_information_path(information) do %>
                    <div class="text-left">
                      <%= information.created_at.strftime('%Y/%m/%d') %><br>
                    </div>
                    <div class="news-title">
                      <%= information.title %>
                    </div>
                  <% end %>
                </button>
              </div>
              <hr>
            <% end %>
            <div class = "col-md-9 col-md-offset-3">
              <%= paginate @information, class: "paginate" %>
            </div>
          </div>
      </div>
    </div>


<%= link_to 'New Topic', new_admin_topic_path, class: "btn-circle-border-double-second" %>

    <div class="container">
        <div class="row">
          <div class="col-md-9 col-md-offset-2">
          <h1 class="new-topic">topic</h1>
            <% @topics.each do |topic| %>
              <div class="example">
                <button type="button" class="btn btn-light">
                  <div class="text-left">
                    <%= topic.created_at.strftime('%Y/%m/%d') %><br>
                  </div>
                  <%= link_to admin_topic_path(topic) do %>
                  <div class="news-title">
                    <%= topic.title %>
                  </div>
                <% end %>
                </button>
               </div>
                <hr>
            <% end %>
            <div class = "col-md-9 col-md-offset-3">
              <%= paginate @topics, class: "paginate" %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>