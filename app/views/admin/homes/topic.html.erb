
<%= link_to 'New News', new_admin_information_path, class: "btn-circle-border-double" %>

  <div class="top_image">
    <div class="content">
     <div class="container">
        <div class="row">
          <div class="col-md-9 col-md-offset-0">
          <h1 class="new-information">information</h1>
            <% @information.each do |information| %>
              <div class="example">
                <p><%= information.created_at.strftime('%Y/%m/%d') %></p><br>
                <button type="button" class="btn btn-light">
                  <%= link_to admin_information_path(information) do %>
                  <%= information.title %>
                  <% end %>
                </button>
                </div>
                <hr>
            <% end %>
            <div class = "col-md-9 col-md-offset-5">
              <%= paginate @information, class: "paginate" %>
            </div>
          </div>
      </div>
    </div>


<%= link_to 'New Topic', new_admin_topic_path, class: "btn-circle-border-double-second" %>

    <div class="container">
        <div class="row">
          <div class="col-md-9 col-md-offset-0">
          <h1 class="new-topic">topic</h1>
            <% @topics.each do |topic| %>
              <div class="example">
                  <p><%= topic.created_at.strftime('%Y/%m/%d') %></p><br>
              <button type="button" class="btn btn-light">
                <%= link_to admin_topic_path(topic) do %>
                <%= topic.title %>
                <% end %>
              </button>
               </div>
                <hr>
            <% end %>
            <div class = "col-md-9 col-md-offset-5">
              <%= paginate @topics, class: "paginate" %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>