<div class="container">
        <div class="row">
          <h1 class="new-topic">topic</h1>
              <div class="example">
                <p><%= @topic.created_at.strftime('%Y/%m/%d') %></p><br>
                <div class ="topic title">
                  <%= @topic.title %>
                </div>
                <hr>
                <p><%= @topic.details.html_safe %></p>
              </div>
              <div class="action">
                <%= link_to "Edit", edit_admin_topic_path(@topic), class:"btn-sm btn-dark"%>
                <%= link_to "Destroy", admin_topic_path(@topic),class:"btn-sm btn-danger", method: :delete, "data-confirm" => "Are you sure?" %>
              </div>
              <hr>
          </div>
      </div>