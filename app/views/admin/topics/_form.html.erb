<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title">New Topic</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
    </div>

  <%= form_for(@topic, url: admin_topics_path, remote: true) do |f| %>
    <div class="form-group field">
        <%= f.label :title , class: "form-control-label"%>
        <%= f.text_field :title, class: "form-control" %>
        <%= f.label :details , class: "form-control-label"%>
        <%= f.text_field :details, class: "form-control" %>
        <%= f.label :image , class: "form-control-label"%>
        <%= f.attachment_field :image %>
    </div>
    <div class="actions">
      <%= f.submit "save"%>
    </div>
  <% end %>
</div>
</div>