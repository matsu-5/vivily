<div class="top_image">
  <section class="container clearfix">
    <div class="row">
      <%= form_for @blog,url:admin_blogs_path do |f| %>
      <div class="col-md-12 col-md-offset-4 new-container">
        <h1 class="new-movie text-center">New Blog</h1>
        <hr>
          <div class="col-md-9 col-md-offset-2">
            <div class = "row">
                <b>Blog Title</b>
                  <%= f.text_field :title, class:"form-control", placeholder: "blog title"  %>
                <b>Blog Detail</br>
                  <%= f.text_area :details, 'data-provider': :summernote, src: "./js/summernote/lang/summernote-ja-JP.js" %>
            </div>
              <div class="new-actions">
                <%= f.submit "save", class:"btn btn-dark btn-lg btn-block"%>
              </div>
      <% end %>
                <div class="text-center">
                  <div class ="back">
                    <%= link_to 'Back', admin_blogs_path, class: "btn-default" %>
                  </div>
                </div>
          </div>
      </div>
    </div>
  </section>
</div>