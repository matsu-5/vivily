<div class="top_image">
    <div class="content">
      <div class="container">
        <div class="row">
           <div class="col-md-9 col-md-offset-0">
             <h1 class="new-live">live</h1>
               <div class="example">
                  <p><%= @live.created_at.strftime('%Y/%m/%d') %></p><br>
                  <div class ="live title">
                    <%= @live.title %>
                  </div>
                  <hr>
                <p><%= @live.details.html_safe %></p>
              </div>
              <div class="action">
                <%= link_to "Edit", edit_admin_life_path(@live), class: "btn-circle-border-double"%>
                <%= link_to "Destroy", admin_life_path(@live), class: "btn-circle-border-double-second", method: :delete, "data-confirm" => "Are you sure?" %>
              </div>
              <hr>
            </div>
          </div>
      </div>
    </div>
  </div>