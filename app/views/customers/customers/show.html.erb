<h3>ユーザー詳細</h3>
<h2><%= @customer.first_name %></h2>
<h2><%= @customer.email %></h2>

<% unless @customer.id == current_customer.id %>
  <% if @isRoom == true %>
    <%= link_to "チャットへGo!", room_path(@roomId) %>
  <% else %>
    <%= form_for @room,url:customers_rooms_path do |f| %>
      <!--%= fields_for @entry do |e| %-->
        <%= e.hidden_field :customer_id, :value=> @customer.id %>
      <!--% end %-->
      <%= f.submit "チャットを始める" %>
    <% end %>
  <% end %>
<% end %>