<% if customer_signed_in? %>
	<% if blog.blog_favorited_by?(current_customer) %>
		<%= link_to customers_blog_blog_favorites_path(blog), method: :delete, remote: true do %>
			<i class="fa fa-heart " aria-hidden="true" style="color: red;">
			</i>
		<% end %>
		<% else %>
		<%= link_to customers_blog_blog_favorites_path(blog), method: :post, remote: true do %>
			<i class="fa fa-heart" aria-hidden="true">
			</i>
		<% end %>
	<% end %>
<% else %>
	<%= link_to new_customer_session_path do %>
		<i class="fa fa-heart" aria-hidden="true">
		</i>
	<% end %>
<% end %>