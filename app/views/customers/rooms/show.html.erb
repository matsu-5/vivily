<div class ="second_image">
  <div class="content">
    <div class="container">
      <div class ="text-color">
	  <div class="row">
		<div class="col-8 offset-2 chat_room" style="background-color: #2c3e50;">
			<% @entries.each do |e| %>
				<% current_customer == e.customer ? @class = "current_customer" : @class = ""  %>
				<% if e.customer != current_customer %>
				  <h5 class="text-left <%= @class %>" id="<%= @class %>" style="font-size: 30px;" data-id="<%= e.customer.id %>"><%= link_to "@#{e.customer.first_name}", customers_customer_path(e.customer_id) %></h5>
				<% else %>
				  <h5 class="text-left <%= @class %>" id="<%= @class %>" data-id="<%= e.customer.id %>"></h5>
				<% end %>
			<% end %>
			<div class="chat-border"></div>
			<div id="direct_messages" data-room_id="<%= @room.id %>">
			  <%= render @direct_messages %>
			</div>
			<div class="chat-border"></div>
			<form>
			  <label style="color: white;">新しいメッセージを作成</label><br>
			  <input type="text" id="chat-input" data-behavior="room_speaker" class="form-control">
			</form>
		</div>
	  </div>
	</div>
  </div>
</div>
</div>
