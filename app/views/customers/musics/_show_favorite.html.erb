<% if customer_signed_in? %>
	<% if music.favorited_by?(current_customer) %>
		<%= link_to customers_music_favorites_path(music), method: :delete, remote: true do %>
			<i class="fa fa-heart " aria-hidden="true" style="color: red;">
				(<%= music.favorites.count %>)
			</i>
		<% end %>
		<% else %>
		<%= link_to customers_music_favorites_path(music), method: :post, remote: true do %>
			<i class="fa fa-heart" aria-hidden="true">
			    (<%= music.favorites.count %>)
			</i>
		<% end %>
	<% end %>
<% else %>
	<%= link_to new_customer_session_path do %>
		<i class="fa fa-heart" aria-hidden="true">
				(<%= music.favorites.count %>)
		</i>
	<% end %>
<% end %>