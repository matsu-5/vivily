        <div class="row">
          <div class="wrapper">
            <div class="col-md-9 col-md-offset-2">
            <h1 class="new-topic">topic</h1>
              <% @topics.each do |topic| %>
                <div class="example">
                  <span class="fadeInUp">
                    <p><%= topic.created_at.strftime('%Y/%m/%d') %></p><br>
                <button type="button" class="btn-default">
                  <%= link_to customers_topic_path(topic) do %>
                  <%= topic.title %>
                  <% end %>
                </button>
                 </div>
                <hr>
              </span>
            <% end %>
            <div class ="text-center back">
              <%= link_to 'All Topics', customers_topics_path, class: "btn-default" %>
            </div>
        </div>
      </div>
    </div>
  </div>
  </div>
