<div class="top_image">
  <div class="content">
    <div class="container">
        <div class="row">
          <div class="col-md-9 col-md-offset-0">
          <h1 class="new-topic">topic</h1>
            <% @topics.each do |topic| %>
              <div class="example">
                  <p><%= topic.created_at.strftime('%Y/%m/%d') %></p><br>
              <button type="button" class="btn btn-light">
                <%= link_to customers_topic_path(topic) do %>
                <%= topic.title %>
                <% end %>
              </button>
               </div>
                <hr>
            <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-9 col-md-offset-0">
          <h2 class="new-movie">Movie</h2>
            <% @movie.each do |movie| %>
            <image class="img-fluid">
              <%= link_to customers_movie_path(movie) do %>
              <%= attachment_image_tag movie, :image, size: "200x200" %>
              <% end %>
            </image>
        <% end %>
    </div>
    <div class="col-md-9 col-md-offset-0">
      <h2 class="new-music">music</h2>
        <% @music.each do |music| %>
        <image class="example_image">
          <%= link_to customers_music_path(music) do %>
          <%= attachment_image_tag music, :image, size: "200x200" %>
            <% end %>
          </image>
       <% end %>
    </div>
  </div>
</div>